<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CornyClient.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                x:Name="JokeLabel"
                Text="Tu powinien być suchar"
                FontSize="30"
                HorizontalOptions="Center" />
            <Button
                Text="Pokaż suchara"
                Clicked="LoadJoke"
                HorizontalOptions="CenterAndExpand"
                BackgroundColor="LightBlue"
                TextColor="Black"
                FontSize="20" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
